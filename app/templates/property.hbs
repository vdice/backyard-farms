<ul>
  <li>Type: {{model.type}}</li>

  <li>Location: {{#link-to 'location' model.location.id}}{{model.location.name}}{{/link-to}}</li>

  <li>
    Features:
    <ul>
      {{#each model.features as |feature|}}
        <li>{{feature}}</li>
      {{/each}}
    </ul>
  </li>

  <li>
    Images:
    <ul>
      {{#each model.images as |image|}}
        <li>
          <img src={{image}}>
        </li>
      {{/each}}
    </ul>
  </li>
</ul>
